<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="@dimen/padding_large">
<TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
  android:text="GAWISH CALCULATOR"
  android:textColor="@color/white"
  android:gravity="center"
  android:textSize="35sp"
  android:textStyle="bold"/>

  <TextView
      android:id="@+id/txt_result"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text=""
      android:maxLength="10"
      android:onClick="onClickNumber"
      android:textSize="48sp"
      android:textColor="@color/brand"
      android:gravity="right"
      android:layout_marginBottom="30dp"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal"
      android:layout_marginBottom="15dp">
    <Button
        android:id="@+id/txt_sum"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_operation"
        android:text="+"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
      android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_subtract"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_operation"
        android:text="-"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/btn_multiply"
      android:layout_width="64dp"
      android:layout_height="64dp"
      style="@style/calculator_button_operation"
      android:text="*"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
      android:id="@+id/btn_divide"
      android:layout_width="64dp"
      android:layout_height="64dp"
      style="@style/calculator_button_operation"
      android:text="/"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="15dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_sven"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="7"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_eight"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="8"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_nine"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="9"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_clear"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_operation"
        android:text="C"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="15dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_four"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="4"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_five"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:onClick="onClickNumber"
        style="@style/calculator_button_numbers"
        android:text="5"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_six"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="6"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_operation"
        android:text="+-"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="15dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_one"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:onClick="onClickNumber"
        android:text="1"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_two"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:onClick="onClickNumber"
        android:text="2"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_three"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:text="3"
        android:onClick="onClickNumber"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_percentage"
        style="@style/calculator_button_operation"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:text="%" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginBottom="15dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_digit_zero"
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:onClick="onClickNumber"
        android:text="0"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        style="@style/calculator_button_numbers"
        android:onClick="onClickNumber"
        android:text="."/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_result"
        android:layout_width="156dp"
        android:layout_height="64dp"
        style="@style/calculator_button_result"
        android:text="="/>
  </LinearLayout>

</LinearLayout>